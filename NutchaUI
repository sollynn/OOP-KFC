            function changeImage(choice) {
                var imageUrl = "";
                switch(choice) {
                    case 1:
                        imageUrl = "https://downloads.ctfassets.net/n4pc9wlortyn/7Hi5tth6sQ1MMpOfDivJPr/477ea208c5ac40e615f0131d9ec4a0cf/Buldak_Sauce_Mar25_Desktop_2880x1740.png";
